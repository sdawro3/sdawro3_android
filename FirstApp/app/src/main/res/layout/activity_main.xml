<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sdaacademy.zientara.rafal.firstapp.MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/name" />

    <Button
        android:background="@drawable/button_selector"
        android:onClick="onButtonClick"
        android:id="@+id/main_openHelloActivityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/special_button_text_color"
        android:text="@string/next" />


    <Button
        android:onClick="onButtonClick"
        android:id="@+id/main_openPermissionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/przyk_ad_z_uprawnieniami" />

    <Button
        android:onClick="onButtonClick"
        android:id="@+id/main_resourcesFunButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zabawa_zasobami" />


</LinearLayout>
